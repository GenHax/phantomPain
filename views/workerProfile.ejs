<!-- Custom scripts for this template -->
<script src="js/main.min.js"></script>

<!-- typewriter script -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
<script src="js/typer.min.js"></script>
