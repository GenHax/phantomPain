<section>
<div class="container">
  <div class="col-lg-12 col-md-offset-3">
    <h2>Hello <%- user.username %></h2>
    <h2>Your Credits: <%- user.credit %></h2>
  </div>
  <br>
  <br>
  <% if (message.length > 0) { %>
   <div class="alert alert-danger alert-dismissible">
     <button type="button" class="close" data-dismmiss="alert" aria-label="Close">
         <span aria-hidden="true">&times;</span>
       </button>
       <%= message %>
   </div>
 <% } %>
  <form method="post">
    <div class="form-group">
    <label>Waste type: </label>
    <select class="form-control" name="type">
      <option value="" disabled selected>Select your waste type</option>
      <option value="Paper">Paper</option>
      <option value="Glass">Glass</option>
      <option value="Plastic">Plastic</option>
      <option value="Metal">Metal</option>
      <option value="Cardboard">Cardboard</option>
      <option value="Bio-Waste">Bio-Waste</option>
    </select>
  </div>
  <div class="form-group">
    <label>Location:</label>
    <select class="form-control" name="location">
      <option value="" disabled selected>Select your location</option>
      <option value="Khandagiri">Khandagiri</option>
      <option value="Patia">Patia</option>
      <option value="Saheed Nagar">Saheed Nagar</option>
      <option value="Kalpana">Kalpana</option>
      <option value="Master Canteen">Master Canteen</option>
    </select>
  </div>
  <div class="form-group">
    <label>Address:</label>
    <input type="text" class="form-control" name="address">
  </div>
  <div class="form-group">
    <button type="submit" class="btn btn-success">Take my waste</button>
  </div>
</form>
</div>
</section>

